@model IDOBusTech.NETTech.Test.ViewModel.RepoAdapter
@{
    ViewBag.Title = "REPOS";
}

<div class="jumbotron text-center mt-20">
    <h1>Github Repo </h1>
    <h5>A quick search for top 5 user repos</h5>
</div>

<div class="row profile">
    <div class="col-md-3">
        <div class="profile-sidebar">      
            <div class="profile-userpic">
                <img src="@Model.Owner.AvatarUrl" class="img-responsive" alt="">
            </div>          
            <div class="profile-user">
                <div class="profile-user-name">
                   @Model.Owner.UserName
                </div>
                <div class="profile-user-job">
                   @Model.Owner.Location
                </div>
            </div>             
        </div>   
    </div>
    <div class="col-md-9">
        <div class="profile-content">           
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Fullname</th>
                        <th>Stargazers</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var repo in Model.Repos)
                    {
                        <tr>
                            <td>@repo.Id</td>
                            <td>@repo.Name</td>
                            <td>@repo.FullName</td>
                            <td>@repo.Stargazers</td>                           
                        </tr>
                    }                    
                   
                </tbody>
            </table>
        </div>
    </div>

    <a href="/" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-home"></span>
        Home
    </a>
</div>
